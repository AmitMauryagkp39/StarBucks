<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUITutorial.View.ForgotPageView"
             Title="ForgotPageView"
             NavigationPage.HasNavigationBar="False" BackgroundColor="LightPink">
    <StackLayout VerticalOptions="Center" Spacing="20">
        <Frame Padding="0" Margin="70,0" CornerRadius="30">
            <Entry Placeholder="Enter Number" WidthRequest="220" Keyboard="Numeric" MaxLength="10"/>
        </Frame>
        <Button Text="Continue" BackgroundColor="Blue"
                TextColor="White" WidthRequest="150" CornerRadius="30"/>
    </StackLayout>
</ContentPage>